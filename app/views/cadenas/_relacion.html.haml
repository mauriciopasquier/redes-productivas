%tr.item
  %td
    = f.fields_for :entrada do |fe|
      = fe.text_field :nombre
  %td= "-->"
  %td
    = f.fields_for :salida do |fs|
      = fs.text_field :nombre
  %td= link_to 'Show', [@cadena, relacion]
  %td
    = link_to 'Destroy', [@cadena, relacion], class: 'remove', data: { confirm: 'Are you sure?' }
    = f.hidden_field :id
    = f.hidden_field :_destroy
