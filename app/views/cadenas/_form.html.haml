= form_for @cadena.preparada, html: { class: 'cadena' } do |f|
  = f.error_messages

  = f.label :nombre
  = f.text_field :nombre
  = hidden_field_tag 'dot', @cadena.to_dot

  %h2 Relaciones

  = render 'grafo'

  %table
    %tbody
      = f.nested_fields_for :relaciones, new_object: relacion_preparada,
                            show_empty: true do |f|
        - if f
          = render 'relacion', f: f
        - else
          = render 'vacio'
  .add= link_to 'nueva relaci√≥n', "#"

  .actions
    = f.submit 'Guardar'
