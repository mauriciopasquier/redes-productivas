= form_for @cadena do |f|
  - if @cadena.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cadena.errors.count, "error")} prohibited this cadena from being saved:"
      %ul
        - @cadena.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save'
