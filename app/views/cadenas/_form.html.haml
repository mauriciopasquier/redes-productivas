= form_for @cadena, html: { class: 'cadena' } do |f|
  = f.error_messages

  = f.label :nombre
  = f.text_field :nombre

  %h2 Relaciones

  %table
    %tbody
      = f.nested_fields_for :relaciones, new_object: @cadena.relacion,
                            show_empty: true do |f|
        - if f
          = render 'relacion', f: f
        - else
          = render 'vacio'
  .add= link_to 'nueva relaci√≥n', "#"

  .actions
    = f.submit 'Guardar'
